<%- include('./partials/headerPanel',{title ,nombreUser, emailUser, apellidoUser, rolUser}) %>

    <div class="container text-center">
        <h3>Suscriptores</h3>
    </div>
    <br>
    <br>
    <% if(mensage==='success' ){%>
        <div class="alert alert-success" role="alert">
            Correo enviado
        </div>

        <%} %>

            <div class="container">
                <% if(mensaje==='success' ){%>
                    <div class="alert alert-success" role="alert">
                        Suscriptor eliminado
                    </div>

                    <%}else if(mensaje==='error' ){%>
                        <div class="alert alert-danger" role="alert">
                            Ocurrio un error
                        </div>

                        <%} %>

                            <% if (user.length> 0) {%>
                                <table class="table table-striped table-bordered" id="productosTable">
                                    <thead>
                                        <tr>
                                            <th>Nombres Completo</th>
                                            <th>Email o Correo</th>
                                            <th>Mensaje</th>
                                            <th>Responder</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% user.forEach(item=> { %>
                                            <tr>
                                                <td>
                                                    <%=item.firstName %>
                                                        <%=item.lastName %>
                                                            <%=item.MotherLastName %>
                                                </td>

                                                <td>
                                                    <%=item.email %>
                                                </td>
                                                <td>
                                                    <%=item.textArea %>
                                                </td>
                                                <th>
                                                    <form action="/send-email" method="POST">
                                                        <input name="email" type="hidden" value=" <%=item.email %>">
                                                        <textarea name="data" id="" cols="30" rows="1"
                                                            required></textarea>
                                                        <button type="submit" class="btn"
                                                            style="background: #D09456; color: white;">Enviar</button>
                                                    </form>


                                                </th>

                                                <th>
                                                    <a
                                                        onclick="deleteSuscriptor('<%=item.idPerson%>', '<%=item.firstName %>')">
                                                        <i class="fas fa-trash-alt text-danger"></i>
                                                    </a>
                                                </th>
                                            </tr>
                                            <% }) %>



                                    </tbody>
                                </table>


                                <%}else{%>
                                    <span>Suscriptores no disponibles</span>

                                    <% } %>

                                        <%- include('./partials/footerPanel') %>