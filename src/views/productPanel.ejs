<%- include('./partials/headerPanel',{ title,nombreUser, emailUser, apellidoUser, rolUser}) %>



  <div class="container mt-5">

    <div class="container text-center mt-5">

      <h2>Productos</h2>
    </div>
    <div class="container">
      <% if(mensaje){%>
        <div class="alert alert-success" role="alert">
          producto vinculado
        </div>

        <%}else if(mensajeDelete){%>
          <div class="alert  alert-danger" role="alert">
            Producto Eliminado
          </div>

          <%} %>


    </div>
    <div class="d-flex justify-content-end mb-3">
      <a href="/add-product" class="btn" style="background: #D09456; color: white;"><i class="fas fa-plus"></i>
        Agregar Nuevo Producto</a>
    </div>
    <div class="table-responsive">
      <% if (product.length> 0) {%>
        <table id="productosT" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Cantidad</th>
              <th>Precio</th>
              <th>Color</th>
              <th>Talla</th>
              <th>Categoria</th>
              <th>Destacado</th>

              <th>Imagen</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% product.forEach(item=> { %>
              <tr>
                <td>
                  <%=item.nameProduct %>
                </td>
                <td style="<%= item.amount === 0 ? 'color: red;' : '' %>"> <!--no tiene nungun error -->
                  <%= item.amount %>
                </td>

                <td>
                  <%=item.price %>
                </td>
                <td>
                  <%=item.color %>
                </td>
                <td>
                  <%=item.size %>
                </td>
                <td>
                  <%= item.nameCategory %>
                </td>
                <td>
                  <% if(item.outstanding===0){%>
                    <i class="fas fa-times"></i>
                    <%}else{%><i class="fas fa-check"></i>
                      <%} %>
                </td>

                <td><img src="<%=item.image%>" width="50px" alt=""></td>
                <td><a href="/update-product/<%=item.idProduct %>"><i class="fas fa-edit"
                      style="color: #D09456;"></i></a>
                  <% if(rolUser==='admin' ){%>
                    <a onclick="deleteProduct('<%=item.idProduct %>','<%=item.nameProduct %>')"><i
                        class="fas fa-trash-alt text-danger"></i></a>

                    <%} %>

                </td>
              </tr>
              <% }); %>



          </tbody>
        </table>
    </div>


    <%}else{%>
      <span>productos no disponibles</span>

      <% } %>

  </div>

  <%- include('./partials/footerPanel') %>